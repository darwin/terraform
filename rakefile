def colorize(text, color_code)
  "#{color_code}#{text}\e[0m"
end

def red(text); colorize(text, "\e[31m"); end
def green(text); colorize(text, "\e[32m"); end
def yellow(text); colorize(text, "\e[33m"); end
def blue(text); colorize(text, "\e[34m"); end
def magenta(text); colorize(text, "\e[35m"); end
def azure(text); colorize(text, "\e[36m"); end
def white(text); colorize(text, "\e[37m"); end
def black(text); colorize(text, "\e[30m"); end

def announce(cmd)
  puts "> " + yellow(cmd)
end

def die(msg, status=1)
  puts red("Error[#{status||$?}]: #{msg}")
  exit status||$?
end

def sys(cmd)
  announce(cmd)
  if not system(cmd) then
    die "failed!"
  end
end

############################################################

desc "dev"
task :dev do
  sys("./node_modules/.bin/coffee --require ./util/include.coffee --require ./util/license.coffee -cw src/terraform.coffee src/editor/editor.coffee")
end

task :default => :dev